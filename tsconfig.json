{
    "compilerOptions": {
        "lib": ["DOM", "ESNext"],
        "module": "CommonJS",
        "target": "ES5",

        "downlevelIteration": true,
        
        "rootDir": "./src",
        "outDir": "./dist",

        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node",

        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true
    },
    "include": ["./src"]
}